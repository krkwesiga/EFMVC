          @Html.DisplayFor(model => model.Purpose)
        </span>
      </div>

      <div>
        <span class="label">
          @Html.DisplayNameFor(model => model.Activity): 
        </span>
        <span class="field">
          @Html.DisplayFor(model => model.Activity)
        </span>
      </div>

      <div>
        <span class="label">
          @Html.DisplayNameFor(model => model.Project): 
        </span>
        <span class="field">
          @Html.DisplayFor(model => model.Project.ProjectDescription)
        </span>
      </div>

    </fieldset>
  </div>
  <div id="footer">
    @Html.Partial("~/Views/Home/_FooterPartial.cshtml")
  </div>
</div>
