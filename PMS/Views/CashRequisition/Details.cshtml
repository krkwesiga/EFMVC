}

<div class="homewrapper">
  <div id="header">
    @Html.Partial("~/Views/Home/_HeaderPartial.cshtml")
  </div>
  <div id="menu">
    @Html.Partial("~/Views/Home/_MenuPartial.cshtml")
  </div>
  <div id="content">
    <div class="contentheading">
      Requisition Details > @Html.ActionLink("Edit", "Edit", new { id = Model.CashRequisitionId }) > @Html.ActionLink("Back to List", "Index")
